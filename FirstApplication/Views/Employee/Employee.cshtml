@model IEnumerable<FirstApplication.Models.Employee>
@{
    ViewBag.Title = "Employee";
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="https://use.fontawesome.com/d4a8770686.js"></script>
<div class="container">
    <div class="row">
        <!--If model distinct of null-->
        @if (Model != null)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Departament</th>
                    </tr>
                </thead>
                <tbody>
                    <!--Add Model (Employee)-->
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>@item.Name</td>
                            <td>@item.Departament</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-danger @ViewBag.ErrorCss">
                <button type="button" class="close" data-dismiss="alert">Close</button>
                @ViewBag.Error
            </div>
        }
        <a href="/Test/index/" class="btn btn-success"><i class="fa fa-arrow-circle-left"></i>&nbsp;Back</a>
    </div>
</div>
